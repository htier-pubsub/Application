                st.warning(f"âš ï¸ {file_counter} total messages received.")
        
        if len(file_messages) > len(st.session_state.messages):
            st.warning(f"âš ï¸ {len(file_messages)} messages in file but {len(st.session_state.messages)} in session. Processing...")
            # Force process again
            process_message_queue()
    
